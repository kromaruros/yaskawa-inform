{
    "name"       : "inform",
    "displayName": "Yaskawa Inform",
    "description": "Yaskawa Inform (Yaskawa Robot Language) support in Visual Studio Code",
    "version"    : "0.1.0",
    "publisher"  : "kromau",
    "repository" : "https://github.com/kromaruros/yaskawa-inform.git",
    "homepage"   : "https://www.yaskawa.si/",
    "icon"       : "images/logo1.png",
    "engines": {
        "vscode": "^1.52.1"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "inform",
                "aliases": [
                    "Yaskawa-Inform",
                    "inform"
                ],
                "extensions": [
                    ".jbi",
                    ".JBI",
                    ".cnd",
                    ".CND",
                    ".dat",
                    ".DAT",
                    ".prm",
                    ".PRM"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "inform",
                "scopeName": "source.inform",
                "path": "./syntaxes/inform.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "inform",
                "path": "./snippets/inform.json"
            }
        ]
    }
}
